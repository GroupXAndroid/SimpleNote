<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_6sdp"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/click_to_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_to_test"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/click_to_test_title">

        <Button
            android:id="@+id/buttonTestNoteDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NoteDetail" />

        <Button
            android:id="@+id/buttonTestNoteListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NotesList" />

        <Button
            android:id="@+id/buttonTestManageFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ManageFolder" />
        <Button
            android:id="@+id/buttonTestFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Feedback" />
        <Button
            android:id="@+id/buttonTestSwm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share with me" />
        <Button
            android:id="@+id/btnSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting" />
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register" />
        <Button
            android:id="@+id/btnSearchNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search note" />
        <Button
            android:id="@+id/btnCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendar" />
        <Button
            android:id="@+id/btnFavourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favourite" />
        <Button
            android:id="@+id/btnArchive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Archive" />
        <Button
            android:id="@+id/btnBin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>